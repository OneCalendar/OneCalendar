# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /events/*keyWords           controllers.Application.findByTags(keyWords)
GET     /preview/*keyWords          controllers.Application.findPreviewByTags(keyWords)
GET     /tags                       controllers.Application.fetchCloudOfTags
GET     /eventCount                 controllers.Application.eventCount

# About
GET     /about                      controllers.Application.about

# Add Events Calendar
GET     /addEvents                  controllers.EventsController.addEvents
POST    /addSingleEvent             controllers.EventsController.addSingleEvent

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
